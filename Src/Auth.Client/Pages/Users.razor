@page "/usuarios"
@inject HttpClient Http

<PageTitle>Lista de Usuarios</PageTitle>

<h1>Lista de Usuarios</h1>

@if (usuarios == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>UserName</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in usuarios)
            {
                <tr>
                    <td>@usuario.Email</td>
                    <td>@usuario.UserName</td>
                    <td>
                        <button type="button" class="btn btn-primary"><i class="bi bi-pencil"></i></button>
                        <button type="button" class="btn btn-warning"><i class="bi bi-card-text"></i></button>
                        <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private AuthUserViewModel[] usuarios;

    protected override async Task OnInitializedAsync()
    {
        var response = 
        await Http.GetFromJsonAsync<ResponsePayload<AuthUserViewModel[]>>("api/auth/listar-usuarios");
        if (response.Success)
        {
            usuarios = response.Data;
        } else
        {
            usuarios = new AuthUserViewModel[0];
        }
    }

    public class AuthUserViewModel
    {
        public string UserName { get; set; }
        public string Email { get; set; }
    }

    public class ResponsePayload<T>
    {
        public bool Success { get; set; }
        public T Data { get; set; }
    }
}
